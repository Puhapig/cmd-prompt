#Used to update the prompt with the git branch if the currect directory is a git repo
#NOTE: paste this at the top of your ~/.bash_profile or ~/.bashrc file then run source <file>
source ~/.git-prompt.sh
export GIT_PS1_SHOWDIRTYSTATE=1
export PS1="\[\033[36m\]\u\[\033[m\]@\[\033[32m\]\h:\[\033[33;1m\]\w\[\033[31m\]\$(__git_ps1) \[\033[00m\]\$ "
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad
